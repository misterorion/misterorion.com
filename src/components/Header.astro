---
import { SITE, MENU } from "@config";

const { userFirstName, userLastName } = SITE;
---

<div class="header-container">
  <a href="/">
    <div class="title">
      <div class="text-pink">{userFirstName.toLowerCase()}</div>
      <div class="text-teal">{userLastName.toLowerCase()}</div>
    </div>
  </a>
  <nav>
    {
      MENU.map((item) => (
        <div class="menu-item">
          <a href={item.slug}>{item.name}</a>
        </div>
      ))
    }
    <div id="theme-btn">
      <img
        id="sun-png"
        src="data:image/png;base64,"
      />
      <img
        id="moon-png"
        src="data:image/png;base64,"
      />
    </div>
  </nav>
</div>

<style>
  #theme-btn {
    cursor: pointer;
    margin-left: 1rem;
  }
  nav {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #sun-png,
  html[data-theme="dark"] #moon-png {
    display: none;
  }
  #moon-png,
  html[data-theme="dark"] #sun-png {
    display: block;
  }
  .text-pink {
    color: var(--color-highlight);
  }
  .text-teal {
    color: var(--color-accent);
  }
  .header-container {
    margin-bottom: 3rem;
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: "Quicksand", sans-serif;
  }
  .title {
    font-weight: 700;
    font-size: 1.875rem;
    line-height: 2rem;
    margin-bottom: 2rem;
    display: flex;
    color: var(--color-text-base);
  }
  .title::before {
    content: "<";
    font-size: 2rem;
    top: 1px;
    position: relative;
    margin-right: 8px;
  }
  .title::after {
    content: ">";
    font-size: 2rem;
    top: 1px;
    position: relative;
    margin-left: 8px;
  }
  .menu-item {
    font-size: 1.125rem;
    border-radius: 0.25rem;
    background-color: var(--color-neutral);
    padding: 0.25rem 0.5rem;
    margin-left: 1rem;
    transition-property: color;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }
  .menu-item:hover a {
    color: var(--color-highlight);
  }
  .menuItem:first-child {
    margin-left: 0;
  }
  a {
    text-decoration: none;
    color: var(--color-text-contrast);
  }

  @media (min-width: 768px) {
    nav {
      margin-top: 1rem;
    }
    .header-container {
      flex-direction: row;
      justify-content: space-between;
      align-items: baseline;
    }
    .title {
      margin: 0;
    }
  }
</style>
